//            №8
            //Задача "Поликлиника"

            //Вы заходите в поликлинику и видите огромную очередь из старушек, вам нужно рассчитать время ожидания в очереди.
            //Формально:
            //            Пользователь вводит кол - во людей в очереди.
            //Фиксированное время приема одного человека всегда равно 10 минутам.
            //Пример ввода: Введите кол-во старушек: 14
            //Пример вывода: "Вы должны отстоять в очереди 2 часа и 20 минут."
            
            int T = 10; //время у врача
            int N;//количество бабушек
            int result;
            int minutesinhours = 60;

            Console.Write($"Введите колличество людей в очереди:");
            N = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine($"Колличество людей в очереди:" + N);
            
            result = N * T; // часы в очереди

            Console.WriteLine(result + " минут всего");

            float chas = (result / minutesinhours);
            float minutes = result %  minutesinhours;

            Console.WriteLine(Convert.ToInt32(chas) + " час(ов)" + Convert.ToInt32(minutes) + " минут");
            
